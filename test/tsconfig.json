{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "preserveConstEnums": true,
        "rootDirs": [
            ".",
            "../src"
        ],
        "outDir": "./.bin",
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitThis": true
    },
    "includes": [
        "*.ts",
        "./*/*.ts",
        "./*/*/*.ts"
    ]
}